---
interface Props {
  name: string;
  tagline: string;
  description: string;
  icon: string;
  appStoreUrl: string;
  playStoreUrl: string;
  features: string[];
}

const { name, tagline, description, icon, appStoreUrl, playStoreUrl, features } = Astro.props;
---

<div class="bg-white rounded-2xl shadow-lg p-8 hover:shadow-xl transition-shadow">
  <div class="text-6xl mb-4">{icon}</div>
  <h3 class="text-2xl font-bold text-gray-900 mb-2">{name}</h3>
  <p class="text-primary font-semibold mb-4">{tagline}</p>
  <p class="text-gray-600 mb-6">{description}</p>
  
  <div class="mb-6">
    <h4 class="font-semibold text-gray-900 mb-2">Features:</h4>
    <ul class="space-y-2">
      {features.map((feature) => (
        <li class="flex items-start">
          <span class="text-primary mr-2">âœ“</span>
          <span class="text-gray-600">{feature}</span>
        </li>
      ))}
    </ul>
  </div>
  
  <div class="flex gap-4">
    <a 
      href={appStoreUrl} 
      target="_blank"
      rel="noopener noreferrer"
      class="flex-1 bg-black text-white px-4 py-3 rounded-lg text-center font-semibold hover:bg-gray-800 transition-colors"
    >
      App Store
    </a>
    <a 
      href={playStoreUrl} 
      target="_blank"
      rel="noopener noreferrer"
      class="flex-1 bg-primary text-white px-4 py-3 rounded-lg text-center font-semibold hover:bg-blue-600 transition-colors"
    >
      Play Store
    </a>
  </div>
</div>
