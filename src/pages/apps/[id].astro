---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import appsData from '../../data/apps.json';

export async function getStaticPaths() {
  return appsData.map((app) => ({
    params: { id: app.id },
    props: { app },
  }));
}

const { app } = Astro.props;
---

<Layout title={`${app.name} | NeuraApps`}>
  <Header />
  
  <section class="py-16 px-4">
    <div class="container mx-auto max-w-4xl">
      <a href="/" class="inline-flex items-center text-primary hover:text-blue-600 mb-8">
        <span class="mr-2">←</span> Back to all apps
      </a>
      
      <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
        <div class="flex items-start gap-6 mb-6">
          <div class="text-8xl">{app.icon}</div>
          <div class="flex-1">
            <h1 class="text-4xl font-bold text-gray-900 mb-2">{app.name}</h1>
            <p class="text-primary text-xl font-semibold mb-4">{app.tagline}</p>
          </div>
        </div>
        
        <p class="text-gray-700 text-lg mb-8 leading-relaxed">{app.description}</p>
        
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Features</h2>
          <ul class="grid md:grid-cols-2 gap-4">
            {app.features.map((feature) => (
              <li class="flex items-start">
                <span class="text-primary text-xl mr-3">✓</span>
                <span class="text-gray-700">{feature}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="flex gap-4 mb-8">
          <a 
            href={app.appStoreUrl} 
            target="_blank"
            rel="noopener noreferrer"
            class="flex-1 bg-black text-white px-6 py-4 rounded-lg text-center font-semibold hover:bg-gray-800 transition-colors"
          >
            Download on App Store
          </a>
          <a 
            href={app.playStoreUrl} 
            target="_blank"
            rel="noopener noreferrer"
            class="flex-1 bg-primary text-white px-6 py-4 rounded-lg text-center font-semibold hover:bg-blue-600 transition-colors"
          >
            Get it on Google Play
          </a>
        </div>
        
        <div class="border-t pt-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Legal Information</h3>
          <div class="flex gap-4">
            <a 
              href={`/apps/${app.id}/privacy-policy`}
              class="text-primary hover:text-blue-600 font-medium"
            >
              Privacy Policy
            </a>
            <span class="text-gray-400">•</span>
            <a 
              href={`/apps/${app.id}/terms-of-use`}
              class="text-primary hover:text-blue-600 font-medium"
            >
              Terms of Use
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <Footer />
</Layout>
