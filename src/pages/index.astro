---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import AppCard from '../components/AppCard.astro';
import Footer from '../components/Footer.astro';
import appsData from '../data/apps.json';
---

<Layout title="Mobile Apps Showcase | NeuraApps">
  <Header />
  <Hero />
  
  <section class="py-16 px-4" id="apps">
    <div class="container mx-auto max-w-6xl">
      <h2 class="text-4xl font-bold text-center text-gray-900 mb-4">
        My Apps
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Explore my collection of mobile applications, each designed to solve real problems and enhance your daily life.
      </p>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {appsData.map((app) => (
          <AppCard {...app} />
        ))}
      </div>
    </div>
  </section>
  
  <Footer />
</Layout>
